def ways(stairs):
    #Check corner case
    if stairs<0:
        return 0
    #if no stair left just return 1 as we reach the top
    if stairs==0:
        return 1
    twosteps=0
    onestep=0
    #We can jump 2 only 2 or more stairs are left
    if (stairs>=2):
        twosteps=ways(stairs-2)
    #jump 1 if 1 or more stairs remain
    onestep=ways(stairs-1)
    #return total ways
    return twosteps+onestep
stairs=int(input('Enter numberr of steps:'))
print('Number of ways to climb:', ways(stairs))